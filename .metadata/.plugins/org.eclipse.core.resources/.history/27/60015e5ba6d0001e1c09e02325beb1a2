// to print largest number of 3 numbers using conditional opeartor

package programming_classes;

import java.util.Scanner;

public class LargestOf {
public static void main(String[] args) {
	Scanner sc = new Scanner(System.in);
	System.out.println("enter 3 numbers");
	int a = sc.nextInt();	
	int b = sc.nextInt();	
	int c = sc.nextInt();	
	
	System.out.println( a > b ? a > c ? a + " is the largest" : c + " is the largest" : b > c ? b + " is the largest"  : c + " is the largest" );

}
}
